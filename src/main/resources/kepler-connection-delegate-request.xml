<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util" xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="kepler.connection.delegate.request" class="com.kepler.connection.delegate.request.DelegateSelector">
		<constructor-arg index="0" ref="kepler.connection.delegate.request.post" />
		<constructor-arg index="1" ref="kepler.connection.delegate.request.get" />
	</bean>

	<bean id="kepler.connection.delegate.request.post" class="com.kepler.connection.delegate.request.DelegatePost">
		<constructor-arg ref="kepler.connection.json" />
	</bean>

	<bean id="kepler.connection.delegate.request.get" class="com.kepler.connection.delegate.request.DelegateGet" />

</beans>