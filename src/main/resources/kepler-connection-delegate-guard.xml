<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util" xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="kepler.connection.guard" class="com.kepler.connection.delegate.guard.ChainedGuard">
		<constructor-arg>
			<util:list>
				<ref bean="kepler.connection.guard.available" />
				<ref bean="kepler.connection.guard.service" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="kepler.connection.guard.service" class="com.kepler.connection.delegate.guard.ServiceGuard" />

	<bean id="kepler.connection.guard.available" class="com.kepler.connection.delegate.guard.AvailableGuard" />

</beans>