<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util" xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="kepler.connection.location.file" class="com.kepler.connection.location.impl.FileLocation" />

	<bean id="kepler.connection.location.arg" class="com.kepler.connection.location.impl.ArgLocation" />

	<bean id="kepler.connection.location" class="com.kepler.connection.location.impl.AllLocation">
		<constructor-arg>
			<util:list>
				<ref bean="kepler.connection.location.file" />
				<ref bean="kepler.connection.location.arg" />
			</util:list>
		</constructor-arg>
	</bean>

</beans>